<Window x:Class="Hermes.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Hermes.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        Title="Hermes PLC Transmitter" Height="720" Width="1280"
        FontFamily="Segoe UI" Background="#FF2D2D30">
    <Window.Resources>
        <!-- (스타일 리소스는 이전과 동일하므로 생략) -->
        <Style TargetType="Ellipse" x:Key="StatusIndicator">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Fill" Value="Gray"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="True">
                    <Setter Property="Fill" Value="#FF39D44A"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" Color="#FF39D44A" BlurRadius="10"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="False">
                    <Setter Property="Fill" Value="#FFD93434"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FF555555"/>
                    <Setter Property="Foreground" Value="#FF999999"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FF00AEEF"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="GroupHeader">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF00AEEF"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- 데이터 모니터링 패널 추가 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 설정 및 제어 패널 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 1. 로컬 PLC 연결 설정 -->
            <GroupBox Grid.Column="0">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource GroupHeader}" Text="1. 로컬 PLC 연결"/>
                        <Ellipse Style="{StaticResource StatusIndicator}" DataContext="{Binding IsPlcConnected}"/>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel>
                    <TextBlock Text="이 PC의 PLC 시뮬레이터와 연결합니다." Foreground="#FF999999" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="PLC 스테이션 번호:"/>
                        <TextBox Grid.Column="1" Text="{Binding Config.PlcStationNumber, UpdateSourceTrigger=PropertyChanged}" Width="100" HorizontalAlignment="Left"/>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="연결" Command="{Binding ConnectPlcCommand}"/>
                        <Button Content="해제" Command="{Binding DisconnectPlcCommand}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 2. 중앙 서버 연결 설정 (MQTT) -->
            <GroupBox Grid.Column="1">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource GroupHeader}" Text="2. 중앙 서버 연결 (데이터 전송)"/>
                        <Ellipse Style="{StaticResource StatusIndicator}" DataContext="{Binding IsMqttConnected}"/>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel>
                    <TextBlock Text="중앙 서버(MQTT 브로커)로 데이터를 전송합니다." Foreground="#FF999999" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="서버 주소 (IP):"/>
                        <TextBox Grid.Column="1" Text="{Binding Config.MqttBrokerAddress, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Grid.Column="2" Content="포트:"/>
                        <TextBox Grid.Column="3" Text="{Binding Config.MqttBrokerPort, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="연결" IsEnabled="False" />
                        <Button Content="해제" IsEnabled="False" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- [신규] PLC 데이터 모니터링 및 제어 -->
        <GroupBox Grid.Row="1" Margin="0,10,0,0">
            <GroupBox.Header>
                <TextBlock Style="{StaticResource GroupHeader}" Text="3. PLC 데이터 모니터링 및 제어"/>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- 실시간 데이터 뷰 -->
                <ListView Grid.Column="0" ItemsSource="{Binding PlcDataItems}" Margin="0,0,10,0" Background="Transparent" BorderThickness="0" Foreground="White">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Description" Width="180" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Header="Address" Width="120" DisplayMemberBinding="{Binding DeviceAddress}"/>
                            <GridViewColumn Header="Current Value" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CurrentValue}" FontWeight="Bold" Foreground="#FF00AEEF" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- 데이터 쓰기 제어 -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="PLC에 데이터 쓰기" Foreground="#FF999999" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="주소:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding WriteAddress, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="값:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding WriteValue, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Button Content="쓰기" Command="{Binding WritePlcValueCommand}" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 하단 로그 뷰어 -->
        <GroupBox Grid.Row="2" Margin="0,10,0,0">
            <GroupBox.Header>
                <TextBlock Style="{StaticResource GroupHeader}" Text="실시간 로그"/>
            </GroupBox.Header>
            <ListView ItemsSource="{Binding Logs}" FontFamily="Consolas" FontSize="12" Background="#FF1E1E1E" BorderThickness="0" Foreground="White">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#FFCCCCCC"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Focusable" Value="False"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Timestamp" Width="180">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Padding="5,0"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Level" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Level}" Padding="5,0"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Message" Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Padding="5,0"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>
